@model IEnumerable<GeekShopping.Web.Models.ProductViewModel>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>

        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create new product
            </a>
        </div>
    </div>

    @if (Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CategoryName</td>
                        <td>@((item.Price).ToString("c"))</td>
                        <td>
                            <a asp-action="ProductUpdate" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </td>
                        <td>
                            @if(User.IsInRole("Admin")){
                                <a asp-action="ProductDelete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products available.</p>
    }

</div>


